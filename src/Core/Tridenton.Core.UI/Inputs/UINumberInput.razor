@typeparam TValue

@inherits UIInputComponent<TValue>
@implements IReadonlyComponent

@if (Disabled)
{
    <input id="@Id" class="@ClassList" type="number" title="@Tooltip" value="@Value" placeholder="@Placeholder" disabled />
}
else
{
    if (Readonly)
    {
        <input id="@Id" class="@ClassList" type="number" title="@Tooltip" value="@Value" placeholder="@Placeholder" readonly />
    }
    else
    {
        <input id="@Id" class="@ClassList" type="number" title="@Tooltip" value="@Value" placeholder="@Placeholder" @oninput="@ValueChanged" @onclick="OnClick" />
    }
}

@code
{
    [Parameter]
    public bool Readonly { get; set; }
    
    protected override string GetUIComponentClass() => "tridenton-ui-input-number";
}