@inherits UIInputComponent<string>
@implements IReadonlyComponent

@if (Disabled)
{
    <input id="@Id" class="@ClassList" type="text" title="@Tooltip" value="@Value" disabled />
}
else
{
    if (Readonly)
    {
        <input id="@Id" class="@ClassList" type="text" value="@Value" readonly/>
    }
    else
    {
        <input id="@Id" class="@ClassList" type="text" value="@Value" @oninput="@ValueChanged" @onclick="OnClick" />
    }
}

@code
{
    [Parameter]
    public bool Readonly { get; set; }
    
    protected override string GetUIComponentClass() => "tridenton-ui-input-text";
}