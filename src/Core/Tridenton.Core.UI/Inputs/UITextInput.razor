@inherits UIInputComponent<string>
@implements IReadonlyComponent

@if (Disabled)
{
    <input id="@Id" class="@ClassList" type="text" title="@Tooltip" value="@Value" placeholder="@Placeholder" disabled />
}
else
{
    if (Readonly)
    {
        <input id="@Id" class="@ClassList" type="text" value="@Value" placeholder="@Placeholder" readonly />
    }
    else
    {
        <input id="@Id" class="@ClassList" type="text" value="@Value" placeholder="@Placeholder" @oninput="@InvokeValueChangedAsync" @onclick="OnClick" />
    }
}

@code
{
    [Parameter]
    public bool Readonly { get; set; }

    protected override string Parse(object? value)
    {
        return value?.ToString() ?? string.Empty;
    }
    
    protected override string GetUIComponentClass() => "tridenton-ui-input-text";
}